{
  "name": "blockteam-note-data",
  "version": "1.0.1",
  "description": "BlockTeam Note Data Application",
  "main": "main.js",
  "author": "BlockTeam",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder" 
  },
  "dependencies": {
    "axios": "^1.6.5",
    "ejs-electron": "^2.1.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.blockteam.his",
    "productName": "BlockTeam Note Data",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BlockTeam Note Data"
    }
  }

}
